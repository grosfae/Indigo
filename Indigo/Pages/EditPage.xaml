<Page x:Class="Indigo.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Indigo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <StackPanel>
            <Image x:Name="MainImage" Height="150" Width="150" Source="{Binding MainImage}"/>
            <Button Height="50" Width="100" Content="изменить фото" x:Name="EditPhotoBtn" Click="EditPhotoBtn_Click"/>
            <Button Height="50" Width="100" Content="сохранить" Name="SaveBtn" Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
